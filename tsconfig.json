{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"types": ["@cloudflare/workers-types"],
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
